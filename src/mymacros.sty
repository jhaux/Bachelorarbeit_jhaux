% einbinden von passend in inkskape exportierten Graphiken
\newcommand{\inkscape}[4]{
  \begin{figure}[h]
    \centering{
      \resizebox{#2}{!}{\input{#1}}
      \caption{#3}
      \label{#4}
    }
  \end{figure}
}

