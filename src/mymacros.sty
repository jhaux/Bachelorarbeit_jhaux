% einbinden von Graphiken, die \linewidth breit sind
\newcommand{\graph}[3][./src/missing_graph.eps]{
  \begin{figure}[H]
      \centering
      \includegraphics[width=\linewidth]{#1}
      \caption{#2}
      \label{#3}
  \end{figure}
}

% einbinden von Graphiken, die immer Ã¼ber die ganze Seitenbreite gehen
\newcommand{\widegraph}[3][./src/missing_graph.eps]{
  \begin{figure*}[h]
      \centering
      \includegraphics[width=\textwidth]{#1}
      \caption{#2}
      \label{#3}
  \end{figure*}
}

% rot hervorgehobener text
